{
    "go.useLanguageServer": true,
    "go.toolsEnvVars": {
        "GOPATH": "/go"
    },
    "go.gopath": "/go",
    "go.alternateTools": {
        "go": "docker-compose exec app go",
        "gopls": "/go/bin/gopls"
    },
    "go.languageServerFlags": [
        "-rpc.trace",
        "-logfile=/tmp/gopls.log"
    ],
    "go.logging.level": "info",
    "go.coverageDecorator": {
        "type": "highlight",
        "coveredHighlightColor": "rgba(64,128,128,0.2)",
        "uncoveredHighlightColor": "rgba(128,64,64,0.2)",
        "coveredGutterStyle": "blockblue",
        "uncoveredGutterStyle": "blockred"
    },
    "go.coverageOptions": "showBothCoveredAndUncoveredCode",
    "go.testFlags": ["-v", "-cover"],
    "go.coverMode": "atomic",
    "go.testTimeout": "30s",
    "testing.automaticallyShowCoverage": true,
    "go.coverOnSave": true,
    "go.coverOnSingleTest": true,
    "go.coverOnSingleTestFile": true,
    "go.coverShowCounts": true,
    "dev.containers.autoStart": true
} 